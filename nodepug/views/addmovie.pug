doctype html
html
  head
    title Add movie
    link(
            rel="stylesheet" 
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" 
            integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" 
            crossorigin="anonymous"
        )
  body
    div.container
        h1 New movie
    form(action='/addmovie', method='POST')
        div.container
            div.form-group
                input(type="text", name="title", placeholder="Title").form-control
            div.form-group
                input(type="text", name="director", placeholder="Director").form-control
            div.form-group
                input(type="number", name="year", placeholder="Year").form-control
            input(type="submit", value="Add").btn.btn-primary