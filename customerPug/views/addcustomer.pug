doctype html
html
  head
    title Add customer
    link(
            rel="stylesheet" 
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" 
            integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" 
            crossorigin="anonymous"
        )
  body
    div.container
        h1 New customer
    form(action='/addcustomer', method='POST')
        div.container
            div.form-group
                input(type="text", name="firstname", placeholder="Firstname").form-control
            div.form-group
                input(type="text", name="lastname", placeholder="Lastname").form-control
            div.form-group
                input(type="tex", name="email", placeholder="Email Address").form-control
            div.form-group
                input(type="tex", name="phone", placeholder="XXX 123 45 67").form-control
            input(type="submit", value="Add").btn.btn-primary